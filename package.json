{
    "name": "@youwol/installers-youwol",
    "description": "Collections of standards installers for youwol",
    "version": "0.0.2-wip",
    "author": "greinisch@youwol.com",
    "homepage": "https://github.com/youwol/installers-youwol#README.md",
    "main": "dist/@youwol/installers-youwol.js",
    "types": "src/index.ts",
    "scripts": {
        "clean": "del-cli dist",
        "build": "yarn build:dev",
        "build:dev": "yarn clean && webpack --mode development",
        "build:prod": "yarn clean && webpack --mode production",
        "test": "jest -c ./jest.config.js -i --rootDir .",
        "test-coverage": "jest -c ./jest.config.js -i --rootDir . --collect-coverage --collectCoverageFrom=./src/lib/**/*.ts ",
        "doc": "typedoc",
        "publish-npm-public": "yarn build:prod && yarn test-coverage && yarn publish --access public"
    },
    "devDependencies": {
        "uuid": "^8.3.2",
        "@youwol/cdn-client": "^0.1.3",
        "codemirror": "^5.5.0",
